{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore.Hosting.Diagnostics": "Error",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    }
  },
  "ReverseProxy": {
    "Clusters": {
      "auth": {
        "Destinations": {
          "authApi": {
            "Address": "http://auth-service"
          }
        }
      },
      "profilesApi": {
        "Destinations": {
          "profileApi": {
            "Address": "http://profile-service"
          }
        }
      },
      "storiesApi": {
        "Destinations": {
          "storiesApi": {
            "Address": "http://stories-service"
          }
        }
      }
    }
  }
}
