{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    }
  },
  "ConnectionStrings": {
    "PostgresConnection": "Server=localhost:5432;User Id=postgres;Password=password;Database=profiles"
  },
  "RabbitMq": {
    "Host": "localhost"
  },
  "AllowedHosts": "*",
  "Jwt": {
    "SecretKey": "your-strong-secret-key-here",
    "AccessTokenExpiryMinutes": 15,
    "RefreshTokenExpiryDays": 10,
    "ShortRefreshTokenExpiryHours": 1,
    "MaxRefreshTokensPerUser": 10,
    "CookieNames": {
      "JwtCookie": "access_token",
      "RefreshCookie": "refresh_token"
    }
  }
}
